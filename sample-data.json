{
  "metadata": {
    "subject": "Hitachi thank you for registering your product"
  },
  "content": "<mjml>\n  <mj-head>\n\n    <mj-html-attributes>\n      <mj-html-attribute class=\"easy-email\" multiple-attributes=\"false\" attribute-name=\"text-color\" text-color=\"#000000\"></mj-html-attribute>\n      <mj-html-attribute class=\"easy-email\" multiple-attributes=\"false\" attribute-name=\"font-family\" font-family=\"Roboto, Noto Sans Thai\"></mj-html-attribute>\n      <mj-html-attribute class=\"easy-email\" multiple-attributes=\"false\" attribute-name=\"font-size\" font-size=\"14px\"></mj-html-attribute>\n      <mj-html-attribute class=\"easy-email\" multiple-attributes=\"false\" attribute-name=\"line-height\" line-height=\"1.7\"></mj-html-attribute>\n      <mj-html-attribute class=\"easy-email\" multiple-attributes=\"false\" attribute-name=\"font-weight\" font-weight=\"400\"></mj-html-attribute>\n      <mj-html-attribute class=\"easy-email\" multiple-attributes=\"false\" attribute-name=\"responsive\" responsive=\"true\"></mj-html-attribute>\n\n    </mj-html-attributes>\n\n    <mj-breakpoint width=\"480px\" />\n\n    <mj-font name=\"Roboto\" href=\"https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap\" />,\n    <mj-font name=\"Noto Sans hai\" href=\"https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@100..900&display=swap\" />\n    <mj-attributes>\n      <mj-text font-size=\"14px\" />\n      <mj-text line-height=\"1.7\" />\n      <mj-text font-weight=\"400\" />\n      <mj-all font-family=\"Roboto, Noto Sans Thai\" />\n      <mj-text font-size=\"14px\" />\n      <mj-text color=\"#000000\" />\n      <mj-text line-height=\"1.7\" />\n      <mj-text font-weight=\"400\" />\n\n    </mj-attributes>\n  </mj-head>\n  <mj-body background-color=\"#fafafa\" width=\"600px\">\n    <mj-section padding=\"0px 0px 0px 0px\" border=\"none\" direction=\"ltr\" text-align=\"left\" background-repeat=\"repeat\" background-size=\"auto\" background-position=\"top center\">\n      <mj-column border=\"none\" vertical-align=\"top\" padding=\"0px 0px 0px 0px\">\n        <mj-image align=\"left\" height=\"auto\" src=\"https://elite.hitachi-homeappliances.com/hitachi-logo.png\" href=\"https://elite.hitachi-homeappliances.com/\" container-background-color=\"#ffffff\" width=\"100px\" padding=\"10px 0px 10px 20px\"></mj-image>\n      </mj-column>\n    </mj-section>\n    <mj-section background-repeat=\"repeat\" background-size=\"auto\" background-position=\"top center\" border=\"none\" direction=\"ltr\" text-align=\"left\" padding=\"0px 0px 0px 0px\">\n      <mj-column border=\"none\" vertical-align=\"top\" padding=\"0px 0px 0px 0px\">\n        <mj-spacer height=\"45px\"></mj-spacer>\n      </mj-column>\n    </mj-section>\n    <mj-section background-repeat=\"repeat\" background-size=\"auto\" background-position=\"top center\" border=\"none\" direction=\"ltr\" text-align=\"left\" padding=\"0px 0px 0px 0px\">\n      <mj-column border=\"none\" vertical-align=\"top\" padding=\"0px 0px 0px 0px\">\n        <mj-text align=\"center\" font-size=\"24px\" font-weight=\"200\" padding=\"0px 0px 0px 0px\"><i>Hello</i> <span style=\"font-weight: 500;\">{{firstName}} {{lastName}},</span></mj-text>\n      </mj-column>\n    </mj-section>\n    <mj-section background-repeat=\"repeat\" background-size=\"auto\" background-position=\"top center\" border=\"none\" direction=\"ltr\" text-align=\"left\" padding=\"0px 0px 0px 0px\">\n      <mj-column border=\"none\" vertical-align=\"top\" padding=\"0px 0px 0px 0px\">\n        <mj-spacer height=\"40px\"></mj-spacer>\n      </mj-column>\n    </mj-section>\n    <mj-section background-repeat=\"repeat\" background-size=\"auto\" background-position=\"top center\" border=\"none\" direction=\"ltr\" text-align=\"center\" background-color=\"#ffffff\" border-radius=\"10px\" padding=\"32px 32px 32px 32px\">\n      <mj-column border=\"none\" vertical-align=\"top\" padding=\"0px 0px 0px 0px\">\n        <mj-image align=\"center\" height=\"auto\" src=\"https://elite.hitachi-homeappliances.com/email/email-verification.png\" width=\"165px\" padding=\"0px 0px 0px 0px\"></mj-image>\n        <mj-text align=\"center\" font-size=\"26px\" font-weight=\"500\" color=\"#A2201C\" padding=\"10px 0px 8px 0px\">Thank you for registering your product.</mj-text>\n        <mj-text align=\"center\" font-size=\"16px\" font-weight=\"500\" padding=\"0px 0px 20px 0px\">We have received your registration details.</mj-text>\n        <mj-text align=\"center\" font-weight=\"400\" font-size=\"14px\" padding=\"0px 0px 0px 0px\">\n          <div style=\"text-align: left;\"><span style=\"word-spacing: normal;\"><b>Product Details:</b></span></div>\n          <div style=\"text-align: left;\">Model &amp; Model name: <b>{{model}} {{modelName}}</b></div>\n          <div style=\"text-align: left;\">Serial Number: <b>{{serialNumber}}</b></div>\n          <div style=\"text-align: left;\">Date of purchase: <b>{{purchaseDate}}</b></div>\n          <div style=\"text-align: left;\">Place of purchase: <b>{{purchaseLocation}}</b></div>\n        </mj-text>\n        <mj-text align=\"center\" font-weight=\"400\" font-size=\"14px\" padding=\"20px 0px 0px 0px\">We''re here to support you. If you have any questions or concern, don''t hesitate to reach out to us at {{localSupportEmail}}.</mj-text>\n      </mj-column>\n    </mj-section>\n    <mj-section background-repeat=\"repeat\" background-size=\"auto\" background-position=\"top center\" border=\"none\" direction=\"ltr\" text-align=\"left\" padding=\"0px 0px 0px 0px\">\n      <mj-column border=\"none\" vertical-align=\"top\" padding=\"0px 0px 0px 0px\">\n        <mj-social align=\"center\" color=\"#333333\" mode=\"horizontal\" font-size=\"13px\" font-weight=\"normal\" border-radius=\"20px\" line-height=\"22px\" text-padding=\"4px 0px 4px 0px\" icon-padding=\"0px\" icon-size=\"42px\" padding=\"10px 0px 10px 0px\">\n          <mj-social-element href=\"https://www.facebook.com/HitachiThailand\" target=\"_blank\" src=\"https://elite.hitachi-homeappliances.com/logo/facebook-gray.png\">&nbsp;</mj-social-element>\n\n          <mj-social-element href=\"https://x.com/Hitachi_TH\" target=\"_blank\" src=\"https://elite.hitachi-homeappliances.com/logo/twitter-gray.png\">&nbsp;</mj-social-element>\n\n          <mj-social-element href=\"https://www.instagram.com/hitachithailand\" target=\"_blank\" src=\"https://elite.hitachi-homeappliances.com/logo/instagram-gray.png\">&nbsp;</mj-social-element>\n        </mj-social>\n      </mj-column>\n    </mj-section>\n  </mj-body>\n</mjml>"
}